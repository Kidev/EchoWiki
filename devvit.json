{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "echo-wiki",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "inline": true,
        "entry": "app.html",
        "height": "tall"
      },
      "app": {
        "entry": "app.html",
        "height": "tall"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "permissions": {
    "redis": true,
    "reddit": {
      "scope": "moderator"
    }
  },
  "media": {
    "dir": "assets"
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "forms": {
    "postTitleForm": "/internal/form/post-title-submit"
  },
  "menu": {
    "items": [
      {
        "label": "Create EchoWiki",
        "forUserType": "moderator",
        "location": "subreddit",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "scheduler": {
    "tasks": {
      "vote-deadline": {
        "endpoint": "/internal/scheduler/vote-deadline"
      }
    }
  },
  "dev": {
    "subreddit": "echo_wiki_dev"
  },
  "marketingAssets": {
    "icon": "assets/icon.png"
  }
}
